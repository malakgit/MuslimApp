<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_image_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="200dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imagebttn"
                    android:layout_width="match_parent"
                    android:layout_height="217dp"
                    app:srcCompat="@drawable/common_full_open_on_phone" />

                <Button
                    android:id="@+id/uploadbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload" />

                <EditText
                    android:id="@+id/PostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:ems="10"
                    android:hint="For what this post"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/TextMore"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:ems="10"
                    android:hint="Tell us more about this post!"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/seeklike"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="textmoe" />

                <SeekBar
                    android:id="@+id/seekBarlike"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="3" />

                <Button
                    android:id="@+id/Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CODE" />

                <Button
                    android:id="@+id/Draft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRAFT" />

                <Button
                    android:id="@+id/Post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POST" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <Button
                    android:id="@+id/chooseimage_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="choose image" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>